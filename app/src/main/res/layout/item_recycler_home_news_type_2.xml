<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--用作占1/3位-->
    <ImageView
        android:id="@+id/iv_cover_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:background="@color/color_black_333333"
        android:layout_marginLeft="16dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_cover_2"
        app:layout_constraintDimensionRatio="109:82" />

    <!--用作占1/3位-->
    <ImageView
        android:id="@+id/iv_cover_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:contentDescription="@null"
        android:layout_marginLeft="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/iv_cover_3"
        app:layout_constraintLeft_toRightOf="@id/iv_cover_1"
        app:layout_constraintRight_toLeftOf="@id/iv_cover_3"
        app:layout_constraintDimensionRatio="109:82" />

    <!--用作显示-->
    <ImageView
        android:id="@+id/iv_cover_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:contentDescription="@null"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="109:82" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_cover_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_cover_3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/color_black_333333"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="国产新能源车能不能买？4个月开了三万公里,这位理想ONE车主有话说三万公里,这位理想ONE车主有话说三万公里,这位理想ONE车主有话说"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover_3"
        android:textSize="12sp"
        android:text="汽车之家  228 评论"
        android:textColor="@color/color_light_gray_999999"/>

</android.support.constraint.ConstraintLayout>