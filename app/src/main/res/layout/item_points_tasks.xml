<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_points_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="109:82"
        android:background="@color/color_light_gray_999999"/>

    <TextView
        android:id="@+id/tv_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_points_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="浏览文章"
        android:drawableEnd="@drawable/icon_arrow_right"
        android:drawablePadding="4dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/color_black_333333"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_points_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/color_light_gray_999999"
        android:text="文案不超过八个字"/>

</android.support.constraint.ConstraintLayout>