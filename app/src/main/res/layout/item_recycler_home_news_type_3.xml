<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/color_black_333333"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="小鹏汽车-做更懂中国的智能汽车"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:contentDescription="@null"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="343:192" />

    <TextView
        android:id="@+id/tv_advert"
        android:layout_width="28dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/color_light_gray_999999"
        android:background="@drawable/shape_color_e4e4e4_radius_2_stroke"
        android:text="@string/advert"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_advert"
        app:layout_constraintBottom_toBottomOf="@id/tv_advert"
        app:layout_constraintLeft_toRightOf="@id/tv_advert"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:text="小鹏汽车"
        android:textColor="@color/color_light_gray_999999"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="17dp"
        android:src="@drawable/icon_del_advertising"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/tv_des"
        app:layout_constraintBottom_toBottomOf="@id/tv_des"/>

</android.support.constraint.ConstraintLayout>