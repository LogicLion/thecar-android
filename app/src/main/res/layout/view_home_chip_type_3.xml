<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--占位,辅助定位-->
    <ImageView
        android:id="@+id/iv_chip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_chip_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>

    <ImageView
        android:id="@+id/iv_chip_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_chip_2"
        app:layout_constraintBottom_toTopOf="@id/iv_chip_3" />

    <ImageView
        android:id="@+id/iv_chip_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_chip_1"
        app:layout_constraintBottom_toTopOf="@id/iv_chip_4"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_chip_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_chip_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_chip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_chip_4" />


    <ImageView
        android:id="@+id/iv_chip_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_black_333333"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_chip_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_chip"
        app:layout_constraintLeft_toRightOf="@id/iv_chip_3"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>